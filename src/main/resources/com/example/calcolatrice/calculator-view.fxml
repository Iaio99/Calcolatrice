<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1" spacing="10" alignment="CENTER" style="-fx-padding: 20;">
  <TextField fx:id="display" prefWidth="200" editable="false" style="-fx-font-size: 24;"/>

  <GridPane hgap="10" vgap="10">
    <Button text="7" fx:id="btn7"/>
    <Button text="8" fx:id="btn8"/>
    <Button text="9" fx:id="btn9"/>
    <Button text="/" fx:id="btnDivide"/>

    <Button text="4" fx:id="btn4"/>
    <Button text="5" fx:id="btn5"/>
    <Button text="6" fx:id="btn6"/>
    <Button text="*" fx:id="btnMultiply"/>

    <Button text="1" fx:id="btn1"/>
    <Button text="2" fx:id="btn2"/>
    <Button text="3" fx:id="btn3"/>
    <Button text="-" fx:id="btnSubtract"/>

    <Button text="0" fx:id="btn0"/>
    <Button text="C" fx:id="btnClear"/>
    <Button text="âˆš" fx:id="btnSqrt"/> <!-- Bottone per la radice quadrata -->
    <Button text="^" fx:id="btnPower"/> <!-- Bottone per la potenza -->
    <Button text="=" fx:id="btnEquals"/> <!-- Bottone per uguale -->
    <Button text="+" fx:id="btnAdd"/>
  </GridPane>
</VBox>
